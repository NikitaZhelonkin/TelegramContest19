<?xml version="1.0" encoding="utf-8"?>
<resources>


    <attr name="colorSurface" format="color"/>
    <attr name="colorDivider" format="color"/>
    <attr name="colorGrid" format="color"/>

    <attr name="popupStyle" format="reference"/>
    <attr name="moonIcon" format="reference"/>

    <attr name="rangeSeekBarStyle" format="reference"/>
    <attr name="textAppearanceChart" format="reference"/>


    <declare-styleable name="RangeSeekBar">
        <attr name="minValue" format="integer"/>
        <attr name="maxValue" format="integer"/>
        <attr name="leftValue" format="integer"/>
        <attr name="rightValue" format="integer"/>
        <attr name="gap" format="integer"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="bgDrawable" format="reference"/>
        <attr name="thumbDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ChartView">
        <attr name="lineWidth" format="dimension"/>
        <attr name="previewMode" format="boolean"/>
        <attr name="gridColor" format="color"/>
        <attr name="surfaceColor" format="color"/>
        <attr name="textAppearance" format="reference"/>
        <attr name="textPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="verticalSpacing" format="dimension"/>
        <attr name="horizontalSpacing" format="dimension"/>
    </declare-styleable>
</resources>