<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="rangeSeekBarStyle">@style/RangeSeekBar</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorDivider">@color/colorDivider</item>
        <item name="colorGrid">@color/colorGrid</item>
        <item name="popupStyle">@style/Popup</item>
        <item name="textAppearanceChart">@style/TextAppearance.Chart</item>
        <item name="android:listDivider">@drawable/shadow</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="moonIcon">@drawable/ic_day_night_24dp</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.Night" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/colorPrimaryNight</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="android:colorAccent">@color/colorAccentNight</item>
        <item name="android:windowBackground">@color/colorBackgroundNight</item>
        <item name="colorSurface">@color/colorSurfaceNight</item>
        <item name="rangeSeekBarStyle">@style/RangeSeekBar.Night</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryNight</item>
        <item name="colorDivider">@color/colorDividerNight</item>
        <item name="colorGrid">@color/colorGridNight</item>
        <item name="popupStyle">@style/Popup.Night</item>
        <item name="textAppearanceChart">@style/TextAppearance.Chart.Night</item>
        <item name="android:listDivider">@drawable/shadow</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="moonIcon">@drawable/ic_day_night_white_24dp</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="ActionBar" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="RangeSeekBar">
        <item name="leftValue">70</item>
        <item name="rightValue">100</item>
        <item name="bgDrawable">@drawable/bg_range_bar</item>
        <item name="thumbDrawable">@drawable/thumb_range_bar</item>
    </style>

    <style name="RangeSeekBar.Night">
        <item name="bgDrawable">@drawable/bg_range_bar_night</item>
        <item name="thumbDrawable">@drawable/thumb_range_bar_night</item>
    </style>

    <style name="Popup" parent="">
        <item name="android:background">@drawable/bg_popup</item>
    </style>

    <style name="Popup.Night">
        <item name="android:background">@drawable/bg_popup_night</item>
    </style>

    <style name="TextAppearance.Chart" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#252529</item>

    </style>

    <style name="TextAppearance.Chart.Night">
        <item name="android:textColor">#ECF2F8</item>
    </style>

    <style name="Checkbox">
        <item name="android:minHeight">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/btn_checkbox</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:background">@drawable/bg_checkbox</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

</resources>
